<div class="large-12 columns">
  <h1>Listing managers</h1>

  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Email</th>
        <th>Password hash</th>
        <th>Password salt</th>
        <th>Locked</th>
        <th>Active</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @managers.each do |manager| %>
        <tr>
          <td><%= manager.id %></td>
          <td><%= manager.name %></td>
          <td><%= manager.email %></td>
          <td><%= manager.password_hash %></td>
          <td><%= manager.password_salt %></td>
          <td><%= manager.locked %></td>
          <td><%= manager.active %></td>
          <td><%= link_to 'Show', manager %></td>
          <td><%= link_to 'Edit', edit_manager_path(manager) %></td>
          <td><%= link_to 'Destroy', manager, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Manager', new_manager_path %>
</div>