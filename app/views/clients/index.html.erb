<div class="large-12 columns">
  <h1>Listing clients</h1>

  <table>
    <thead>
      <tr>
        <th>Code</th>
        <th>Name</th>
        <th>Nif</th>
        <th>Address</th>
        <th>Phone</th>
        <th>Fax</th>
        <th>Country</th>
      </tr>
    </thead>

    <tbody>
      <% @clients.each do |client| %>
        <tr>
          <td><%= client['CodCliente'] %></td>
          <td><%= client['NomeCliente'] %></td>
          <td><%= client['NumContribuinte'] %></td>
          <td><%= client['MoradaCliente'] %></td>
          <td><%= client['TelefoneCliente'] %></td>
          <td><%= client['Moeda'] %></td>
          <td><%= client['Pais'] %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Client', new_client_path %>
</div>