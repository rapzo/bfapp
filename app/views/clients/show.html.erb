<div class="large-12 columns">
  <h1><%= "Client #{@client.code}" %></h1>

  <div class="row">
    <div class="large-6 columns">
      <%= render 'show' %>
    </div>

    <div class="large-6 columns">
      <div class="row">
        <div class="large-12 columns">
          <%= render 'user' %>
        </div>
      </div>

      <div class="row">
        <div class="large-12 columns">
          <%= render 'orders' %>
        </div>
      </div>
    </div>

  </div>

  <div class="large-12 columns">
    <%= link_to 'Edit', edit_client_path(@client) %>
  </div>
</div>