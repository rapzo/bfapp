<h1>Listing admin_orders</h1>

<table>
  <thead>
    <tr>
      <th>Client</th>
      <th>Article</th>
      <th>Quantity</th>
      <th>Status</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_orders.each do |admin_order| %>
      <tr>
        <td><%= order.client_id %></td>
        <td><%= order.article_id %></td>
        <td><%= order.quantity %></td>
        <td><%= order.status %></td>
        <td><%= link_to 'Show', order(admin_order.id) %></td>
        <td><%= link_to 'Edit', edit_order_path(admin_order) %></td>
        <td><%= link_to 'Destroy', order(admin_order.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


