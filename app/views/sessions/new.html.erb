<div class="row">
  <div class="small-4 small-centered columns">
  <% flash.each do |name, msg| %>
    <%= content_tag :div, msg, :id => "flash_#{name}", :class => "alert-box alert" %>
  <% end %>
  </div>
</div>
<div class="row">
  <div class="small-4 small-centered columns">
    <%= form_tag "/login" do %>
      <p>
        <%= label_tag :email %>
        <%= text_field_tag :email %>
      </p>
      <p>
        <%= label_tag :password %>
        <%= password_field_tag :password %>
      </p>
      <p>
        <%= submit_tag "Log in", class: "button" %>
      </p>
    <% end %>
  </div>
</div>